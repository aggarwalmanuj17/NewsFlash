<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manuj.projectwork">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_newsicon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_newsicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ListViewCountry"></activity>
        <activity
            android:name=".BottomNavigation"
            android:label="@string/title_activity_bottom_navigation" />
        <activity android:name=".DetailedNews" />
        <activity android:name=".NewsViewActivity" />
        <activity
            android:name=".NewsNav"
            android:label="@string/title_activity_news_nav"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".MainActivity" />
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>